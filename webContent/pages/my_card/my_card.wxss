/* pages/my_card/mycard.wxss */
.card {
  float: left;
  margin-left: 40rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.card_img {
  height: 470rpx;
  width: 316rpx;
  border-radius: 12rpx;
}
.projection{
  height: 75rpx;
  width: 316rpx;
  position: absolute;
  top: 443rpx;
  left: 3rpx;
  z-index: -1
}
.time {
  font-size: 24rpx;
  line-height: 40rpx;
  color: #a397a6;
  padding: 0 18rpx 0 27rpx;
  box-sizing: border-box;
}

.tr {
  font-size: 30rpx;
  line-height: 40rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 18rpx 0 27rpx;
  box-sizing: border-box;
}

.title {
  color: #87768b;
}
.charge{
  color: #f29ebc;
}
.free{
  color: #87768b;
}
.close{
   position: absolute;
   top: 15rpx;
   right: 15rpx;
   z-index: 6;
   width: 50rpx;
   height: 50rpx;
   display: none;
}
.card .display{
  display: block;
}
.nothing {
  font-size: 30rpx;
  color: #797979;
  margin-top: 400rpx;
  margin-left: 32rpx;
  text-align:  center
}
